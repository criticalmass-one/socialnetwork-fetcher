{% extends 'base.html.twig' %}

{% block title %}Profil {{ profile.identifier }} - Social Network Fetcher{% endblock %}

{% block body %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_profile_index') }}">Profiles</a></li>
            <li class="breadcrumb-item active">{{ profile.identifier }}</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            {% if profile.network %}
                <span class="badge badge-network me-2" style="background-color: {{ profile.network.backgroundColor }}; color: {{ profile.network.textColor }};">
                    <i class="{{ profile.network.icon }}"></i>
                </span>
            {% endif %}
            {{ profile.identifier }}
        </h1>
        <div class="btn-group">
            <a href="{{ path('app_profile_edit', {id: profile.id}) }}" class="btn btn-outline-primary">
                <i class="fas fa-edit me-1"></i>Bearbeiten
            </a>
            <a href="{{ path('app_item_index', {profile: profile.id}) }}" class="btn btn-outline-info">
                <i class="fas fa-list me-1"></i>Items ({{ itemCount }})
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">Details</div>
                <div class="card-body">
                    <table class="table table-borderless mb-0">
                        <tr>
                            <th style="width: 200px;">ID</th>
                            <td>{{ profile.id }}</td>
                        </tr>
                        <tr>
                            <th>Netzwerk</th>
                            <td>
                                {% if profile.network %}
                                    <span class="badge badge-network" style="background-color: {{ profile.network.backgroundColor }}; color: {{ profile.network.textColor }};">
                                        <i class="{{ profile.network.icon }} me-1"></i>{{ profile.network.name }}
                                    </span>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Identifier</th>
                            <td>{{ profile.identifier }}</td>
                        </tr>
                        <tr>
                            <th>Auto-Fetch</th>
                            <td>
                                {% if profile.autoFetch %}
                                    <span class="badge text-bg-success">Aktiv</span>
                                {% else %}
                                    <span class="badge text-bg-secondary">Inaktiv</span>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Auto-Publish</th>
                            <td>
                                {% if profile.autoPublish %}
                                    <span class="badge text-bg-success">Aktiv</span>
                                {% else %}
                                    <span class="badge text-bg-secondary">Inaktiv</span>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Erstellt am</th>
                            <td>{{ profile.createdAt ? profile.createdAt|date('d.m.Y H:i:s') : '-' }}</td>
                        </tr>
                    </table>
                </div>
            </div>

            {% if profile.additionalData %}
                <div class="card mb-4">
                    <div class="card-header">Zusätzliche Daten</div>
                    <div class="card-body">
                        <pre class="raw-data mb-0">{{ profile.additionalData|json_encode(constant('JSON_PRETTY_PRINT') b-or constant('JSON_UNESCAPED_UNICODE')) }}</pre>
                    </div>
                </div>
            {% endif %}
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">Fetch-Status</div>
                <div class="card-body">
                    {% if profile.lastFetchSuccessDateTime %}
                        <div class="mb-3">
                            <small class="text-muted d-block">Letzter erfolgreicher Fetch</small>
                            <span class="text-success">
                                <i class="fas fa-check me-1"></i>{{ profile.lastFetchSuccessDateTime|date('d.m.Y H:i:s') }}
                            </span>
                        </div>
                    {% endif %}

                    {% if profile.lastFetchFailureDateTime %}
                        <div class="mb-3">
                            <small class="text-muted d-block">Letzter fehlgeschlagener Fetch</small>
                            <span class="text-danger">
                                <i class="fas fa-times me-1"></i>{{ profile.lastFetchFailureDateTime|date('d.m.Y H:i:s') }}
                            </span>
                        </div>
                        {% if profile.lastFetchFailureError %}
                            <div>
                                <small class="text-muted d-block">Fehler</small>
                                <code>{{ profile.lastFetchFailureError }}</code>
                            </div>
                        {% endif %}
                    {% endif %}

                    {% if not profile.lastFetchSuccessDateTime and not profile.lastFetchFailureDateTime %}
                        <p class="text-muted mb-0">Noch nicht abgerufen.</p>
                    {% endif %}
                </div>
            </div>

            <div class="card">
                <div class="card-header">Aktionen</div>
                <div class="card-body d-grid gap-2">
                    <a href="{{ path('app_item_index', {profile: profile.id}) }}" class="btn btn-outline-info">
                        <i class="fas fa-list me-1"></i>{{ itemCount }} Items anzeigen
                    </a>
                    <a href="{{ path('app_profile_edit', {id: profile.id}) }}" class="btn btn-outline-primary">
                        <i class="fas fa-edit me-1"></i>Bearbeiten
                    </a>
                    <form method="post" action="{{ path('app_profile_delete', {id: profile.id}) }}"
                          data-controller="confirm"
                          data-confirm-message-value="Profil &quot;{{ profile.identifier }}&quot; wirklich löschen?">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete-profile-' ~ profile.id) }}">
                        <button type="submit" class="btn btn-outline-danger w-100">
                            <i class="fas fa-trash me-1"></i>Löschen
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    {% include '_partials/_delete_modal.html.twig' %}
{% endblock %}
